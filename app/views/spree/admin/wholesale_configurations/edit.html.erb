<% content_for :page_title do %>
  <%= Spree.t(:wholesale_configurations, scope: :spree_wholesale_storefront) %>
<% end %>

<%= form_tag admin_wholesale_configurations_path, method: :put do %>
	<div class="row">
		<div class="col-md-12" data-hook="wholesales">
			<div class="form-group">
				<%= label_tag :minimum_order do %>
					<%= preference_field_tag :minimum_order, Spree::WholesaleStorefront::Config[:minimum_order], type: :decimal, class: "form-control" %>
					<%= Spree.t(:minimum_order, scope: :spree_wholesale_storefront) %>
				<% end %>
			</div>

			<div class="form-actions" data-hook="buttons">
				<%= button Spree.t('actions.update'), 'update' %>
			</div>
		</div>
	</div>
<% end %>