<div data-hook="admin_product_form_wholesale_price">
  <%= f.field_container :wholesale_price, class: ['form-group'] do %>
    <%= f.label :wholesale_price, Spree.t('spree.spree_wholesale_storefront.wholesale_price') %>
    <%= f.text_field :wholesale_price, value: number_to_currency(@product.wholesale_price, unit: ''), class: 'form-control', disabled: (cannot? :update, @product.master.wholesale_price) %>
    <%= f.error_message_on :wholesale_price %>
  <% end %>
</div>
